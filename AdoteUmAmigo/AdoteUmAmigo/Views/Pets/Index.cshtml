@model IEnumerable<AdoteUmAmigo.Models.Pet>

@{
    ViewBag.Title = "Index";
}

<h2>Doar Pet</h2>
<hr/>
<p>
    <a href="http://localhost:52794/Pets/Create" class="btn btn-warning">Cadastro para Doação &raquo;</a>    
</p>
<hr/>
<h3>Pets Cadastrados</h3>

<table class="table">
    <tr>        
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Especie.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeDoPet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeDoDoador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            <img src="@item.Foto" border="0" width="100px" />
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Especie.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeDoPet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeDoDoador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade)
        </td>        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PetId }) |            
            @Html.ActionLink("Deletar", "Delete", new { id=item.PetId })
        </td>
    </tr>
}

</table>
