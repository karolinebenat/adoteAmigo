@model IEnumerable<AdoteUmAmigo.Models.Pet>

@{
    ViewBag.Title = "Admin";
}

<h2>Área Restrita</h2>
<hr />
<h4>O Administrador pode deletar qualquer cadastro de Doação, e também adicionar ou remover qualquer Espécie.</h4>
<hr />
<p>
    @Html.ActionLink("Cadastro de Espécies", "Index", "Especies")
</p>
<hr />
<h3>Lista de Todos Cadastros de Doação</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especie.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeDoPet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeDoDoador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userId)
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.Foto" border="0" width="200px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especie.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeDoPet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeDoDoador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userId)
        </td>        
        <td>                        
            @Html.ActionLink("Deletar", "Delete", new { id=item.PetId })
        </td>
    </tr>
}

</table>
