@model IEnumerable<AdoteUmAmigo.Models.Especie>

@{
    ViewBag.Title = "Index";
}

<h2>Cadastro Espécies</h2>

<p>
    @Html.ActionLink("Cadastrar Nova Espécie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EspecieId }) |            
            @Html.ActionLink("Deletar", "Delete", new { id=item.EspecieId })
        </td>
    </tr>
}    

</table>
<div>
    @Html.ActionLink("Voltar", "Admin", "Pets")
</div>
